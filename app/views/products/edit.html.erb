<h1>Editing product</h1>

<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :price %>
      <%= f.number_field :price %>
    </p>

    <p>
      <%= f.label :product_categories %>
      <%= f.collection_select :product_category_ids, ProductCategory.all, :id, :name, {}, {:multiple => true} %>
    </p>

    <p>
      <%= f.file_field :photo, as: :file %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>