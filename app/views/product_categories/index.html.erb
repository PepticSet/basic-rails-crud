<h1>Product Categories</h1>

<p>
  <%= link_to 'New category', new_product_category_path, :class => "btn btn-primary" %>
</p>

<table class="table table-hover table-responsive">
  <tr class="table-inverse">
    <th>Category name</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', product_category_path(category), :class => "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_product_category_path(category), :class => "btn btn-warning" %></td>
      <td>
        <%= link_to 'Destroy', product_category_path(category),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    :class => "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>