<h1>Product Categories</h1>

<%= link_to 'New category', new_product_category_path %>

<table>
  <tr>
    <th>Category name</th>
    <th colspan="3"></th>
  </tr>

  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', product_category_path(category) %></td>
      <td><%= link_to 'Edit', edit_product_category_path(category) %></td>
      <td>
        <%= link_to 'Destroy', product_category_path(category),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>